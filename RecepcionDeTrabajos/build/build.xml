<project name="RecepcionDeTrabajos" basedir=".." default="build">
	<description>
        Build file de la GUI del Sistema Recepci√≥n de Trabajos.
    </description>

	<property file="./build/build.properties" />
	
	<target name="build"
	        depends="copiarJars,generarMainJar"
	        description="Despliega la GUI en el ambiente pasado como parametro">
	</target>

	<target name="compilar">
		<delete dir="${bin.dir}" />
		<mkdir dir="${bin.dir}" />
		<javac srcdir="${basedir}/src" destdir="${bin.dir}" target="1.5" source="1.5">
			<classpath>
				<fileset dir="${lib.dir}">
					<include name="**/*.jar" />
				</fileset>
			</classpath>
		</javac>
	</target>

	<target name="limpiarTemporales">
		<echo>Limpiando archivos temporales...</echo>
		<delete dir="${executable.dir}/${main.jar}" />
		<delete dir="${executable.lib.dir}" />
		<mkdir dir="${executable.lib.dir}" />
	</target>

	<target name="generarMainJar" >
		<echo>Generando jar del codigo fuente (${executable.dir}/${main.jar})</echo>
		<jar destfile="${executable.dir}/${main.jar}" basedir="${bin.dir}">
		     <manifest>
		       <attribute name="Main-Class" value="recepciondetrabajos.MainWindow"/>
		       <attribute name="Class-Path" value="${manifest.classpath}"/>
		     </manifest>
		</jar>
	</target>

	<target name="copiarJars" depends="limpiarTemporales">
		<echo>Copiando librerias a ${executable.lib.dir}...</echo>
		<copy todir="${executable.lib.dir}">
			<fileset dir="${lib.dir}" includes="*.jar" />
		</copy>
		<copy todir="${executable.lib.dir}">
			<fileset dir="${lib.dir}/swt_jface" includes="*.jar" />
		</copy>		
	</target>
	
	<path id="build.classpath">
	  <fileset dir="${executable.lib.dir}">
	     <include name="*.jar"/>
	  </fileset>
	</path>

	<pathconvert property="manifest.classpath" pathsep=" ">
	  <path refid="build.classpath"/>
	  <mapper>
	    <chainedmapper>
	       <flattenmapper/>
	       <globmapper from="*.jar" to="lib/*.jar"/>
	    </chainedmapper>
	  </mapper>
	</pathconvert>
	

</project>